<section class="formulario">
    <h1>Registro</h1>
    <form id="regForm" method="post" action="/api/sessions/register" enctype="multipart/form-data">
        <label for="name">Nombre: </label>
        <input type="text" name="first_name" id="name">

        <label for="last_name">Apellido: </label>
        <input type="text" name="last_name" id="last_name">
        
        <label for="mail">Email: </label>
        <input type="email" name="mail" id="mail">
        
        <label for="age">Edad: </label>
        <input type="number" name="age" id="age">
        
        <label for="password">Contrase√±a: </label>
        <input type="password" name="password" id="password">

        <label for="avatar">Avatar: </label>
        <input type="file" name="avatar" id="avatar" placeholder="Imagen de perfil">
        
        <input class="btn-page" type="submit" value="Registrarme">
    </form>
    <p><a href="/login">Ya tengo cuenta</a></p>
</section>
