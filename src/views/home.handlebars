
    {{#if error}}
        <h1>Error</h1>
        <p>El limit debe ser mayor a 0</p>
    {{else}}
        <table >
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Category</th>
                    <th>Stock</th>
                    <th>Code</th>
                </tr>
            </thead>
            <tbody>
    {{#each products}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.stock}}</td>
                    <th>{{this.code}}</th>
                </tr>
    {{/each}}
            </tbody>
        </table>
        <section>
            {{#if hasPrevPage}}
                <a href="/products?page={{prevPage}}&limit={{limite}}"><button>Anterior</button></a>
            {{/if}}
            {{#if hasNextPage}}
                <a href="/products?page={{nextPage}}&limit={{limite}}"><button>Siguiente</button></a>
            {{/if}}
        </section>
    {{/if}}
