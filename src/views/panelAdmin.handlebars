<section>

    {{#if error}}
    <h1>Error</h1>
    <p>El limit debe ser mayor a 0</p>
    {{else}}
    <form id="limitForm" method="get" action="/panelAdmin">
        <section>
            <label for="limitInput">Limit:</label>
            <input type="number" id="limitInput" name="limit" value="{{limit}}" min="1">
        </section>

        <input class="btn-add" type="submit" value="Submit">
    </form>
    <ul class="categorias">
        <li>
            <a href="/panelAdmin?page={{page}}&limit={{limit}}&role=client">Clientes comunes</a>
        </li>
        <li>
            <a href="/panelAdmin?page={{page}}&limit={{limit}}&role=premium">Clientes premium</a>
        </li>
    </ul>
    <ul class="categorias title">
        <li><a href="/panelAdmin">Reset</a></li>
        <li>
            <h4>Paginas totales: {{totalPages}}</h4>
        </li>
    </ul>
</section>

